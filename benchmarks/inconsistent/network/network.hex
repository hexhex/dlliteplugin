route(X,Z):-route(X,Y),route(Y,Z).
go(X,Y):-edge(X,Y), not forbid(X,Y).

%&rDL["network.owl",pblock,b,c,d,"forbid"](X,Y).

open(X) v block(X):-node(X), not broken(X).

%&cDL["network.owl",pnode,b,c,d,"Broken"](X).

negis(X):-node(X), node(Y), route(X,Y), X!=Y.
:-node(X), not negis(X).

%pblock("Block",X):-block(X).
%pblock("Node",X):-node(X).

